<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC">
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/textview_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_test_str"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="20dp"
            />

        <fragment
            class = "com.test.fragments.testing.test.fragmentstest.FragmentSecond"
            android:id="@+id/frag_second"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="20dp"/>

        <fragment
            class = "com.test.fragments.testing.test.fragmentstest.FragmentFirst"
            android:id="@+id/frag_first"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"/>

    </GridLayout>
</ScrollView>